						<rect x="3" y="4" width="2" height="1"/>
						<rect x="11" y="4" width="2" height="1"/>
						<rect x="5" y="5" width="2" height="1"/>
						<rect x="9" y="5" width="2" height="1"/>
						<rect x="7" y="6" width="2" height="1"/>
					</svg>
				</a>
			</div>
		</section>

	</div>
</PageLayout>
