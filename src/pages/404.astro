---
import PageLayout from '@/layouts/PageLayout.astro';
---

<PageLayout
	title="404 - Not Found"
	description="Page not found."
>
	<div class="py-20 space-y-6">
		<h1 class="font-display text-4xl font-bold text-red">404</h1>
		<p class="font-mono text-comment">
			<span class="text-red">Error:</span> This page doesn't exist.
		</p>
		<div class="flex gap-4 font-mono text-sm">
			<a href="/" class="text-green hover:text-green/80 transition-colors">Home</a>
			<a href="/blog" class="text-green hover:text-green/80 transition-colors">Blog</a>
			<a href="/projects" class="text-green hover:text-green/80 transition-colors">Projects</a>
		</div>
	</div>
</PageLayout>
