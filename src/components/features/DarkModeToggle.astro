<button
	class="theme-toggle rounded p-1.5 text-comment transition-colors hover:text-green"
	aria-label="Toggle theme"
>
	<!-- Pixel sun (shown when dark is active — click to go light) -->
	<svg class="theme-icon-sun" width="20" height="20" viewBox="0 0 16 16" fill="currentColor" style="image-rendering: pixelated;">
		<rect x="7" y="0" width="2" height="2"/>
		<rect x="2" y="2" width="2" height="2"/>
		<rect x="12" y="2" width="2" height="2"/>
		<rect x="5" y="5" width="6" height="6"/>
		<rect x="0" y="7" width="2" height="2"/>
		<rect x="14" y="7" width="2" height="2"/>
		<rect x="2" y="12" width="2" height="2"/>
		<rect x="12" y="12" width="2" height="2"/>
		<rect x="7" y="14" width="2" height="2"/>
	</svg>
	<!-- Pixel moon (shown when light is active — click to go dark) -->
	<svg class="theme-icon-moon hidden" width="20" height="20" viewBox="0 0 16 16" fill="currentColor" style="image-rendering: pixelated;">
		<rect x="6" y="0" width="4" height="2"/>
		<rect x="4" y="2" width="2" height="2"/>
		<rect x="10" y="2" width="2" height="2"/>
		<rect x="2" y="4" width="2" height="2"/>
		<rect x="2" y="6" width="2" height="2"/>
		<rect x="2" y="8" width="2" height="2"/>
		<rect x="4" y="10" width="2" height="2"/>
		<rect x="6" y="12" width="2" height="2"/>
		<rect x="8" y="12" width="4" height="2"/>
		<rect x="12" y="10" width="2" height="2"/>
		<rect x="12" y="6" width="2" height="2"/>
		<rect x="10" y="4" width="2" height="2"/>
		<rect x="8" y="4" width="2" height="2"/>
		<rect x="8" y="6" width="2" height="2"/>
	</svg>
</button>

<script>
	function initThemeToggles() {
		const isLight = document.documentElement.getAttribute('data-theme') === 'light';

		// Sun visible in dark mode (default), moon visible in light mode
		document.querySelectorAll('.theme-icon-sun').forEach((el) => {
			el.classList.toggle('hidden', isLight);
		});
		document.querySelectorAll('.theme-icon-moon').forEach((el) => {
			el.classList.toggle('hidden', !isLight);
		});

		// Attach click handlers to all toggle buttons
		document.querySelectorAll('.theme-toggle').forEach((btn) => {
			// Remove old listener by cloning
			const newBtn = btn.cloneNode(true) as HTMLElement;
			btn.replaceWith(newBtn);

			newBtn.addEventListener('click', () => {
				const isCurrentlyLight = document.documentElement.getAttribute('data-theme') === 'light';

				if (isCurrentlyLight) {
					// Switch to dark (remove attribute — dark is default)
					document.documentElement.removeAttribute('data-theme');
					localStorage.setItem('theme', 'dark');
				} else {
					// Switch to light
					document.documentElement.setAttribute('data-theme', 'light');
					localStorage.setItem('theme', 'light');
				}

				// Update all icons on the page
				document.querySelectorAll('.theme-icon-sun').forEach((el) => {
					el.classList.toggle('hidden', isCurrentlyLight ? false : true);
				});
				document.querySelectorAll('.theme-icon-moon').forEach((el) => {
					el.classList.toggle('hidden', isCurrentlyLight ? true : false);
				});
			});
		});
	}

	initThemeToggles();
	document.addEventListener('astro:after-swap', () => {
		// Re-apply theme from localStorage after page swap
		const theme = localStorage.getItem('theme') || 'dark';
		if (theme === 'light') {
			document.documentElement.setAttribute('data-theme', 'light');
		} else {
			document.documentElement.removeAttribute('data-theme');
		}
		initThemeToggles();
	});
</script>
