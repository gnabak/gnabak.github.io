<style>
	/* 9 frames × 3s each = 27s total cycle */
	.pixel-scene .pixel-frame {
		opacity: 0;
		animation: pixel-cycle 27s step-end infinite;
	}
	.pixel-scene .pixel-frame:nth-child(1) { animation-delay: 0s; }
	.pixel-scene .pixel-frame:nth-child(2) { animation-delay: 3s; }
	.pixel-scene .pixel-frame:nth-child(3) { animation-delay: 6s; }
	.pixel-scene .pixel-frame:nth-child(4) { animation-delay: 9s; }
	.pixel-scene .pixel-frame:nth-child(5) { animation-delay: 12s; }
	.pixel-scene .pixel-frame:nth-child(6) { animation-delay: 15s; }
	.pixel-scene .pixel-frame:nth-child(7) { animation-delay: 18s; }
	.pixel-scene .pixel-frame:nth-child(8) { animation-delay: 21s; }
	.pixel-scene .pixel-frame:nth-child(9) { animation-delay: 24s; }

	@keyframes pixel-cycle {
		0%       { opacity: 1; }
		11.111%  { opacity: 0; }  /* 1/9 ≈ 11.111% */
	}

	/* Label cycling */
	.pixel-label-text::after {
		content: 'coding...';
		animation: label-text 27s step-end infinite;
	}
	@keyframes label-text {
		0%       { content: 'coding...'; }
		11.111%  { content: 'building...'; }
		22.222%  { content: 'reading...'; }
		33.333%  { content: 'sleeping...'; }
		44.444%  { content: 'writing...'; }
		55.556%  { content: 'tennis...'; }
		66.667%  { content: 'running...'; }
		77.778%  { content: 'snowboarding...'; }
		88.889%  { content: 'hiking...'; }
	}
</style>
