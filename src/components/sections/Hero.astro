---
import Button from '@/components/ui/Button.astro';
import GradientText from '@/components/ui/GradientText.astro';
---

<section class="relative overflow-hidden py-20 sm:py-32">
	<!-- Background gradient effect -->
	<div class="absolute inset-0 -z-10">
		<div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 opacity-50"></div>
		<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-primary opacity-20 blur-3xl rounded-full"></div>
	</div>

	<div class="container mx-auto px-4">
		<div class="mx-auto max-w-4xl text-center space-y-8">
			<!-- Main heading -->
			<h1 class="font-display text-5xl font-bold leading-tight sm:text-6xl lg:text-7xl animate-fade-in">
				Hi, I'm{' '}
				<GradientText as="span" animated class="block sm:inline">
					Gustavo
				</GradientText>
			</h1>

			<!-- Subtitle -->
			<p class="text-xl sm:text-2xl text-foreground/70 leading-relaxed max-w-2xl mx-auto animate-slide-up">
				A passionate developer building modern web applications with a focus on performance, user experience, and clean code.
			</p>

			<!-- CTA buttons -->
			<div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4 animate-slide-up">
				<Button variant="primary" size="lg" href="/blog">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
						<path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
						<path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
					</svg>
					Read My Blog
				</Button>
				<Button variant="outline" size="lg" href="/projects">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
						<path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path>
						<path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
					</svg>
					View Projects
				</Button>
			</div>

			<!-- Quick stats or highlights -->
			<div class="grid grid-cols-3 gap-8 pt-12 max-w-2xl mx-auto">
				<div class="space-y-2">
					<p class="font-display text-3xl font-bold gradient-text">5+</p>
					<p class="text-sm text-foreground/60">Years Experience</p>
				</div>
				<div class="space-y-2">
					<p class="font-display text-3xl font-bold gradient-text">20+</p>
					<p class="text-sm text-foreground/60">Projects Built</p>
				</div>
				<div class="space-y-2">
					<p class="font-display text-3xl font-bold gradient-text">10+</p>
					<p class="text-sm text-foreground/60">Technologies</p>
				</div>
			</div>
		</div>
	</div>
</section>
