---
interface Props {
	class?: string;
	hover?: boolean;
}

const { class: className, hover = false } = Astro.props;

const classes = `
	rounded-lg border border-border bg-muted/30 p-6
	${hover ? 'transition-all duration-300 hover:shadow-xl hover:-translate-y-1 hover:border-purple/50' : ''}
	${className || ''}
`;
---

<div class={classes}>
	<slot />
</div>
